{
    "name": "dev-toolbelt/laravel-eloquent-plus",
    "description": "Supercharge your Laravel Eloquent models with automatic validation, audit trails, external IDs, smart casting, and lifecycle hooks â€” all with zero boilerplate.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "eloquent",
        "model",
        "validation",
        "audit",
        "blamable",
        "uuid",
        "external-id",
        "casting",
        "lifecycle-hooks",
        "soft-deletes",
        "cpf",
        "cnpj",
        "brazilian-validation"
    ],
    "homepage": "https://github.com/Dev-Toolbelt/laravel-eloquent-plus",
    "authors": [
        {
            "name": "Kilderson Sena",
            "email": "dersonsena@gmail.com",
            "homepage": "https://github.com/dersonsena",
            "role": "Developer"
        }
    ],
    "support": {
        "issues": "https://github.com/Dev-Toolbelt/laravel-eloquent-plus/issues",
        "source": "https://github.com/Dev-Toolbelt/laravel-eloquent-plus"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/dersonsena"
        }
    ],
    "require": {
        "php": "^8.3",
        "laravel/framework": "^11.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^9.16",
        "phpstan/phpstan": "^1.0",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "DevToolbelt\\LaravelEloquentPlus\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DevToolbelt\\LaravelEloquentPlus\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration tests/phpunit.xml",
        "test:coverage": "php -d pcov.enabled=1 -d pcov.directory=src vendor/bin/phpunit --configuration tests/phpunit-coverage.xml",
        "phpcs": "phpcs --standard=phpcs.xml",
        "phpcs:fix": "php-cs-fixer fix --config=.php-cs-fixer.php --allow-risky=yes",
        "phpstan": "phpstan analyse --configuration=phpstan.neon --memory-limit=512M"
    },
    "extra": {
        "laravel": {
            "providers": [
                "DevToolbelt\\LaravelEloquentPlus\\LaravelEloquentPlusServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
